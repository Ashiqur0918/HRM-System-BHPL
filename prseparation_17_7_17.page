	form separation
		valid myvalid
		table premp
		order xempnum
		objects xempnum,xjoindate display(cons),xdateexp,sal,pfamt,lEn,gra,othADDamt,adjSal,adjPF,adjLE,adjGra,adjOther,tot,zactive,Process,Show,Update,Clear
		
		
